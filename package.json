{
  "name": "typeweaver",
  "private": true,
  "description": "Type-safe API framework with code generation for TypeScript",
  "scripts": {
    "typecheck": "turbo typecheck",
    "build": "turbo build && pnpm size",
    "size": "size-limit",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix && pnpm format",
    "format": "prettier --write .",
    "test": "turbo test",
    "test:gen": "turbo test:gen",
    "publish:dry": "pnpm publish -r --dry-run --no-git-checks",
    "ci:publish": "pnpm publish -r"
  },
  "keywords": [
    "api",
    "spec",
    "definition",
    "typescript",
    "zod",
    "generator",
    "typeweaver"
  ],
  "author": "Dennis Wentzien <dw@rexeus.com>",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rexeus/typeweaver.git"
  },
  "bugs": {
    "url": "https://github.com/rexeus/typeweaver/issues"
  },
  "homepage": "https://github.com/rexeus/typeweaver#readme",
  "engines": {
    "node": ">=24.0.0"
  },
  "packageManager": "pnpm@10.12.1",
  "devDependencies": {
    "@changesets/cli": "2.29.6",
    "turbo": "^2.5.4",
    "@size-limit/file": "^12.0.0",
    "size-limit": "^12.0.0",
    "@eslint/js": "^9.39.2",
    "@faker-js/faker": "^10.2.0",
    "@types/ejs": "^3.1.5",
    "@types/node": "^24.0.0",
    "@typescript-eslint/parser": "^8.54.0",
    "@vitest/coverage-v8": "^4.0.18",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-unicorn": "^62.0.0",
    "prettier": "^3.8.1",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.56.1",
    "vitest": "^4.0.18",
    "zod": "^4.3.6"
  },
  "peerDependencies": {
    "zod": "^4.3.0"
  }
}
