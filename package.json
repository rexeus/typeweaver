{
  "name": "typeweaver",
  "private": true,
  "description": "Type-safe API framework with code generation for TypeScript",
  "scripts": {
    "typecheck": "pnpm -r typecheck",
    "build": "pnpm -r build",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix && pnpm format",
    "format": "prettier --write .",
    "test": "pnpm -r test",
    "test:gen": "pnpm -r test:gen",
    "ci:publish": "pnpm publish -r"
  },
  "keywords": [
    "api",
    "spec",
    "definition",
    "typescript",
    "zod",
    "generator",
    "typeweaver"
  ],
  "author": "Dennis Wentzien <dw@rexeus.com>",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rexeus/typeweaver.git"
  },
  "bugs": {
    "url": "https://github.com/rexeus/typeweaver/issues"
  },
  "homepage": "https://github.com/rexeus/typeweaver#readme",
  "packageManager": "pnpm@10.12.1",
  "devDependencies": {
    "@changesets/cli": "^2.29.5",
    "@eslint/js": "^9.32.0",
    "@faker-js/faker": "^9.9.0",
    "@types/ejs": "^3.1.5",
    "@types/node": "^24.3.0",
    "@typescript-eslint/parser": "^8.39.1",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "pkgroll": "^2.15.3",
    "prettier": "^3.5.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.38.0",
    "vitest": "^3.2.4",
    "zod": "^3.25.67"
  },
  "peerDependencies": {
    "zod": "^3.25.67"
  }
}
