{
  "name": "@rexeus/typeweaver-core",
  "version": "0.6.5",
  "description": "Runtime utilities and shared types to drive type-safe API definitions. Powered by Typeweaver ðŸ§µâœ¨",
  "type": "module",
  "sideEffects": false,
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.mts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist",
    "package.json",
    "README.md",
    "LICENSE",
    "NOTICE"
  ],
  "scripts": {
    "typecheck": "tsc --noEmit",
    "format": "oxfmt",
    "build": "tsdown && cp ../../LICENSE ../../NOTICE ./dist/",
    "prepack": "npm run build",
    "preversion": "npm run build"
  },
  "keywords": [
    "api",
    "spec",
    "definition",
    "typescript",
    "zod",
    "generator",
    "typeweaver"
  ],
  "author": "Dennis Wentzien <dw@rexeus.com>",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rexeus/typeweaver.git",
    "directory": "packages/core"
  },
  "bugs": {
    "url": "https://github.com/rexeus/typeweaver/issues"
  },
  "homepage": "https://github.com/rexeus/typeweaver#readme",
  "peerDependencies": {
    "zod": "^4.3.0"
  },
  "devDependencies": {
    "zod": "^4.3.6"
  }
}
